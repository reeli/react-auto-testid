{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": ".output",
    "baseUrl": ".",
    "rootDir": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["*", "__types__/*"]
    },
  },
  "exclude": ["node_modules", "**/__tests__/**"]
}
